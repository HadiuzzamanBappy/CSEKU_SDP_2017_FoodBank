<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bappy.foodbank.Adminstaff"
    android:orientation="vertical"
    android:background="@drawable/food_app"
    android:id="@+id/adminstaff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="bappy"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_marginLeft="220dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#aeee"
            android:onClick="allorder"
            android:text="All order"
            android:textAlignment="center"
            android:textColor="@drawable/blue_color"
            android:textSize="15sp"
            android:layout_marginLeft="120dp"
            />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bappy"
        android:textSize="25sp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:id="@+id/date"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/getdate"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/orderlist"
            android:layout_alignBottom="@+id/orderlist"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:background="#aeee"
            android:text="Get date"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:background="#aeee"
            android:onClick="getfullprice"
            android:text="Get full price"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/orderlist"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#aeee"
            android:onClick="orderlist"
            android:text="order list"
            android:textSize="15sp" />

        <Button
            android:id="@+id/deliverylist"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="#aeee"
            android:onClick="deliverylist"
            android:text="delivery list"
            android:textSize="15sp"
            android:layout_above="@+id/button4"
            android:layout_toRightOf="@+id/orderlist"
            android:layout_toEndOf="@+id/orderlist"
            android:layout_marginLeft="119dp"
            android:layout_marginStart="119dp" />

        <Button
            android:id="@+id/assignstaff"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="26dp"
            android:background="#aeee"
            android:onClick="assignstaff"
            android:text="assign staff"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/deliverylist"
            android:layout_alignEnd="@+id/deliverylist"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp" />

        <Button
            android:id="@+id/pendingstaff"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="#aeee"
            android:onClick="pending"
            android:text="pending staff"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_below="@+id/button4"
            android:layout_alignLeft="@+id/deliverylist"
            android:layout_alignStart="@+id/deliverylist" />

        <Button
            android:id="@+id/decorate"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/orderlist"
            android:layout_alignRight="@+id/orderlist"
            android:layout_alignTop="@+id/button4"
            android:layout_gravity="start"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:background="#aeee"
            android:onClick="decoraterestaurant"
            android:text="decorate your menu"
            android:textAlignment="center"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>
