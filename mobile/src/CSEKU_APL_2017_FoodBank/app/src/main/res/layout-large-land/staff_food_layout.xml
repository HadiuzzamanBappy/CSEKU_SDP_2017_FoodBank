<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/order"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/sname"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="25sp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff:"
                android:textSize="25sp"
                />
            <TextView
                android:id="@+id/staff"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="25sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chef:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/chef"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/snumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="number"
            android:textSize="20sp"
        />
        <TextView
            android:id="@+id/sorderdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="orderdate"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/sdeliverydate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deliverydate"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/sdeliverytype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deliverytype"
            android:textSize="20sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:id="@+id/sprice"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="price"
                android:textSize="20sp"
                android:layout_weight="5"
                />
            <TextView
                android:id="@+id/spaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="paid"
                android:textSize="20sp"
                android:layout_weight="5"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/sorderplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="orderplace"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">
            <info.hoang8f.widget.FButton
                android:layout_weight="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food List"
                android:textSize="20sp"
                android:id="@+id/foodlist"
                android:layout_marginBottom="5dp"
                app:buttonColor="@color/buttoncolor"
                android:shadowColor="#000"
                app:shadowHeight="4dp"
                app:shadowEnabled="true"
                app:cornerRadius="17dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"/>
            <info.hoang8f.widget.FButton
                android:textAllCaps="false"
                android:layout_weight="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show All"
                android:textSize="20sp"
                android:id="@+id/showall"
                android:layout_marginBottom="5dp"
                app:buttonColor="@color/buttoncolor"
                android:shadowColor="#000"
                app:shadowHeight="4dp"
                app:shadowEnabled="true"
                app:cornerRadius="17dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>