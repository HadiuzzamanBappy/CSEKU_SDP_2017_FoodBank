<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/food_app"
    android:id="@+id/add_food"
    android:padding="7dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="35sp"
        android:textColor="@drawable/red_color"
        android:text="Please Fill All The Information to\nAdd Your New Food"
        android:layout_marginTop="40dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#fff"
        android:hint="Input Your Food Name\nsuch as: Chicken Grill"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:id="@+id/foodname"
        android:textSize="28sp"
        android:textColor="#fff"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#fff"
        android:hint="Input Food Price"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:id="@+id/foodprice"
        android:textSize="28sp"
        android:textColor="#fff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="#757575">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Type"
        android:textSize="28sp"
        android:textColor="#fff"
        android:layout_marginTop="16dp"
        android:paddingLeft="10dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/spinnertype"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:background="#757575"
        android:paddingLeft="10dp"
        ></Spinner>

    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="ADD"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:layout_marginTop="100dp"
        android:background="#aeee"
        android:onClick="addfood"/>

</LinearLayout>
