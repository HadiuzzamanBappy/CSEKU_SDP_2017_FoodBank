<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bappy.foodbank.Adminstaff"
    android:orientation="vertical"
    android:background="@drawable/food_app"
    android:id="@+id/only_staff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bappy"
        android:textSize="40sp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/name"
        android:layout_weight="5"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#aeee"
            android:textColor="@drawable/blue_color"
            android:textAlignment="center"
            android:text="All order"
            android:textSize="30sp"
            android:onClick="allorder"
            android:layout_marginTop="4dp"
            android:layout_weight="5"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bappy"
        android:textSize="40sp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:id="@+id/date"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/getdate"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="Get date"
        android:textSize="35sp"
        android:layout_gravity="end"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#aeee"
        android:id="@+id/orderlist"
        android:text="order list"
        android:textSize="35sp"
        android:onClick="orderlist"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#aeee"
        android:id="@+id/deliverylist"
        android:text="delivery list"
        android:textSize="35sp"
        android:onClick="deliverylist"
        android:layout_gravity="center"/>

</LinearLayout>