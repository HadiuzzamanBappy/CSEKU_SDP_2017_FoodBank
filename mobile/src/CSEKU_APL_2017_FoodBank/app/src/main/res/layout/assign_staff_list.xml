<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="#fff"
    >
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/order"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sname"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="23sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff:"
                android:textSize="23sp"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:id="@+id/spinner3"
                android:textAlignment="center"
                ></Spinner>
        </LinearLayout>
        <TextView
            android:id="@+id/snumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="number"
            android:textSize="20sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sfood"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="food"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/squantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="quantity"
                android:textSize="20sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/sorderdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="orderdate"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/sdeliverydate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deliverydate"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/sdeliverytype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deliverytype"
            android:textSize="20sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price : "
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/sprice"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="price"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/spaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="paid"
                android:textSize="20sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/sorderplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="orderplace"
            android:textSize="20sp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assign"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="#fff"
            android:background="@drawable/blue_color"
            android:id="@+id/Assign"
            android:onClick="gotoass"/>
    </LinearLayout>
</LinearLayout>