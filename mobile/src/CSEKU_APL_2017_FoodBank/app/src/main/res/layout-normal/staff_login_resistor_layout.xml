<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food_app"
    tools:context="com.example.bappy.foodbank.staff_login_resistor"
    android:baselineAligned="false"
    android:id="@+id/staff_login_register"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If You Are Already a Staff \nor Admin then Click LOGIN\nOtherwise Click REGISTER\n for Registration"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/login"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#aeee"
        android:onClick="login"
        android:text="Login"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User???"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="#fff"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:background="#aeee"
        android:text="Registor"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:onClick="registeryou"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="60dp"
        android:background="#aeee"
        android:gravity="center"
        android:onClick="skipall"
        android:text="Skip >>"
        android:textSize="15sp" />

</LinearLayout>
