<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/food_app"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_app">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Log In"
        android:layout_gravity="end"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="45sp"
        android:layout_marginRight="15dp"
        android:id="@+id/logger"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="450dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/home_icon" />

    <info.hoang8f.widget.FButton
        android:id="@+id/restaurent"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:onClick="parsejsonrestaurent"
        android:text="Restaurant"
        android:textSize="25sp"
        android:shadowColor="@color/shadowcolor"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        app:cornerRadius="9dp"
        app:buttonColor="@color/buttoncolor"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/findfood"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="I Am Hungry For"
        android:textSize="25sp"
        android:padding="15dp"
        android:onClick="parsejsonfood"
        android:shadowColor="@color/shadowcolor"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        app:cornerRadius="9dp"
        app:buttonColor="@color/buttoncolor"
        />

    <info.hoang8f.widget.FButton
        android:id="@+id/exit"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:text="Exit"
        android:textSize="25sp"
        android:padding="15dp"
        android:shadowColor="@color/shadowcolor"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        app:cornerRadius="9dp"
        app:buttonColor="@color/buttoncolor"
        />

</LinearLayout>
