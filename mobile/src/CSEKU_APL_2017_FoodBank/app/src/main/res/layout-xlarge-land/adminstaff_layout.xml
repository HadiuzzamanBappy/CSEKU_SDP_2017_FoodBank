<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bappy.foodbank.Adminstaff"
    android:orientation="vertical"
    android:background="@drawable/food_app"
    android:id="@+id/adminstaff"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="bappy"
            android:textSize="45sp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/name"
            android:layout_weight="0.12" />
        <info.hoang8f.widget.FButton
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="#aeee"
            android:textColor="#000"
            android:textAlignment="center"
            android:text="All order"
            android:textSize="35sp"
            android:onClick="allorder"
            android:layout_gravity="center"
            android:layout_weight="0.10"
            app:buttonColor="@color/buttoncolor"
            android:shadowColor="#000"
            app:shadowHeight="4dp"
            app:shadowEnabled="true"
            app:cornerRadius="17dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bappy"
        android:textSize="45sp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:id="@+id/date"
        android:layout_marginTop="25dp"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/getdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="30dp"
        android:layout_weight="0.15"
        android:background="#aeee"
        android:text="Get date"
        android:textAlignment="center"
        android:textSize="35sp"
        app:buttonColor="@color/buttoncolor"
        android:shadowColor="#000"
        app:shadowHeight="4dp"
        app:shadowEnabled="true"
        app:cornerRadius="17dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <info.hoang8f.widget.FButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#aeee"
        android:id="@+id/orderlist"
        android:text="order list"
        android:textSize="35sp"
        android:onClick="orderlist"
        android:layout_weight="0.14"
        app:buttonColor="@color/buttoncolor"
        android:shadowColor="#000"
        app:shadowHeight="4dp"
        app:shadowEnabled="true"
        app:cornerRadius="17dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <info.hoang8f.widget.FButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#aeee"
        android:id="@+id/deliverylist"
        android:text="delivery list"
        android:textSize="35sp"
        android:onClick="deliverylist"
        android:layout_weight="0.09"
        app:buttonColor="@color/buttoncolor"
        android:shadowColor="#000"
        app:shadowHeight="4dp"
        app:shadowEnabled="true"
        app:cornerRadius="17dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

        <info.hoang8f.widget.FButton
            android:onClick="getfullprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#aeee"
            android:textAlignment="center"
            android:text="Get full price"
            android:textSize="35sp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_weight="0.12"
            app:buttonColor="@color/buttoncolor"
            android:shadowColor="#000"
            app:shadowHeight="4dp"
            app:shadowEnabled="true"
            app:cornerRadius="17dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/assignstaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="assign staff"
        android:textSize="35sp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:onClick="assignstaff"
        android:layout_weight="0.08"
        app:buttonColor="@color/buttoncolor"
        android:shadowColor="#000"
        app:shadowHeight="4dp"
        app:shadowEnabled="true"
        app:cornerRadius="17dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    <info.hoang8f.widget.FButton
        android:id="@+id/pendingstaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="pending staff"
        android:textSize="35sp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:onClick="pending"
        android:layout_weight="0.08"
        app:buttonColor="@color/buttoncolor"
        android:shadowColor="#000"
        app:shadowHeight="4dp"
        app:shadowEnabled="true"
        app:cornerRadius="17dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    <info.hoang8f.widget.FButton
        android:id="@+id/decorate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="decorate your menu"
        android:textSize="35sp"
        android:layout_gravity="start"
        android:onClick="decoraterestaurant"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.17"
        app:buttonColor="@color/buttoncolor"
        android:shadowColor="#000"
        app:shadowHeight="4dp"
        app:shadowEnabled="true"
        app:cornerRadius="17dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    </LinearLayout>

</ScrollView>
