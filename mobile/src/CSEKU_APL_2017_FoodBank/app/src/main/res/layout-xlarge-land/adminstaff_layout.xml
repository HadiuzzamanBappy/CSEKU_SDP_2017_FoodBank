<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bappy.foodbank.Adminstaff"
    android:orientation="vertical"
    android:background="@drawable/food_app"
    android:id="@+id/adminstaff"
    android:weightSum="1">
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="bappy"
            android:textSize="45sp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/name"
            android:layout_marginTop="20dp"/>
        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="#aeee"
            android:textColor="@drawable/blue_color"
            android:textAlignment="center"
            android:text="All order"
            android:textSize="35sp"
            android:onClick="allorder"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_weight="0.10" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bappy"
        android:textSize="45sp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:id="@+id/date"
        android:layout_marginTop="25dp"/>
    <Button
        android:id="@+id/getdate"
        android:layout_width="433dp"
        android:layout_height="wrap_content"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="Get date"
        android:textSize="35sp"
        android:layout_gravity="end"
        android:layout_marginTop="0dp"
        android:layout_weight="0.15" />
    <Button
        android:onClick="getfullprice"
        android:layout_width="433dp"
        android:layout_height="wrap_content"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="Get full price"
        android:textSize="35sp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_weight="0.12" />

    <Button
        android:layout_width="433dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#aeee"
        android:id="@+id/orderlist"
        android:text="order list"
        android:textSize="35sp"
        android:onClick="orderlist"
        android:layout_weight="0.14" />

    <Button
        android:layout_width="433dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#aeee"
        android:id="@+id/deliverylist"
        android:text="delivery list"
        android:textSize="35sp"
        android:onClick="deliverylist"
        android:layout_weight="0.09" />

    <Button
        android:id="@+id/assignstaff"
        android:layout_width="433dp"
        android:layout_height="wrap_content"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="assign staff"
        android:textSize="35sp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:onClick="assignstaff"
        android:layout_weight="0.08" />
    <Button
        android:id="@+id/pendingstaff"
        android:layout_width="433dp"
        android:layout_height="wrap_content"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="pending staff"
        android:textSize="35sp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:onClick="pending"
        android:layout_weight="0.08" />
    <Button
        android:id="@+id/decorate"
        android:layout_width="433dp"
        android:layout_height="wrap_content"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="decorate your menu"
        android:textSize="35sp"
        android:layout_gravity="start"
        android:onClick="decoraterestaurant"
        android:layout_marginTop="10dp"
        android:layout_weight="0.17" />

</LinearLayout>
