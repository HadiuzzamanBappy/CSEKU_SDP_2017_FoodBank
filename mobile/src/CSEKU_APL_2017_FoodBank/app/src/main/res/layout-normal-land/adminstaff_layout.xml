<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bappy.foodbank.Adminstaff"
    android:orientation="vertical"
    android:background="@drawable/food_app"
    android:id="@+id/adminstaff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="bappy"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:layout_marginTop="4dp"
            android:background="#aeee"
            android:onClick="allorder"
            android:text="All order"
            android:textAlignment="center"
            android:textColor="@drawable/blue_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bappy"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/getdate"
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="Get date"
        android:textSize="15sp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"/>
    <Button
        android:onClick="getfullprice"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="Get full price"
        android:textSize="15sp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:layout_marginTop="10dp"
        android:background="#aeee"
        android:id="@+id/orderlist"
        android:text="order list"
        android:textSize="15sp"
        android:onClick="orderlist"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:layout_marginTop="10dp"
        android:background="#aeee"
        android:id="@+id/deliverylist"
        android:text="delivery list"
        android:textSize="15sp"
        android:onClick="deliverylist"/>

    <Button
        android:id="@+id/assignstaff"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="assign staff"
        android:textSize="15sp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:onClick="assignstaff"/>
    <Button
        android:id="@+id/pendingstaff"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="pending staff"
        android:textSize="15sp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:onClick="pending"/>
    <Button
        android:id="@+id/decorate"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="decorate your menu"
        android:textSize="15sp"
        android:layout_gravity="start"
        android:onClick="decoraterestaurant"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        />
    </LinearLayout>
</ScrollView>
